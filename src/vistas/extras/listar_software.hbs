<body class="bg-dark d-flex justify-content-center align-items-center w-100">
    <div class="bg-white p-5 rounded-5 container vh-100">

        <form method="POST" action="">
            <br>
           <h4 class="fw mb-3 text-uppercase">Listado de software disponibles</h4>
            <div class="container">
            <div class="row g-2">
                <div class="col-sm-9">
                    <label for="campo" class="form-label">Buscar software</label>
                    <input type="text" class="form-control" name="campo" placeholder="" value="">
                </div>

                <div class="col-3 d-grid gap-2 d-md-block">
                    <br>
                    <a class="btn btn-primary" href="/inventarios/buscar">Buscar</a>
                    <a class="btn btn-primary" href="/extra/agregar_software">Nuevo</a>
                </div>
            </div>
        </div>
        </form>
        <br>
        <table class="table" id="mouse">
            <thead class="table-dark">
                <tr>
                    <th scope="col" class="text-center">Software</th>
                    <th scope="col" class="text-center">Tipo de licencia</th>
                    <th scope="col" class="text-center">Licencia</th>
                    <th scope="col" class="text-center">Editar registro</th>
                    <th scope="col" class="text-center">Borrar registro</th>
                </tr>
            </thead>
            <tbody>
                {{#each soft}}
                    <tr>
                        <td class="text-center" scope="row">{{software}}</td>
                        <td class="text-center">{{tipolicencia}}</td>
                        <td class="text-center">{{licencia}}</td>
                        <td class="text-center"><a class="btn btn-secondary" href="listar_dispositivos/editar/{{noserie}}"><i class="bi bi-pencil"></i></a></td>
                        <td class="text-center"><a class="btn btn-danger" href="listar_perifericos/eliminar/{{noserie}}"><i class="bi bi-trash3"></i></a></td>
                    </tr>
                {{else}}
                    <div class="alert alert-warning text-center" role="alert">
                       No se encontraron registros
                      </div>
             {{/each}} 
                
            </tbody>
        </table>
