{{#if mensaje }}
      <div class="container"> 
        <div class="row">
          <div class="col-md-3 mx-auto">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              {{mensaje}}
              <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          </div>
        </div>
      </div>
    {{/if}}