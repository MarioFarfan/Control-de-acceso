<link rel="stylesheet" href="/estilos/calendar.css" type="text/css" />
<body class="bg-dark d-flex justify-content-center align-items-center vh-100">
    <div class="bg-white p-5 rounded-5 container w-100" id="miContenedor">
        <form method="POST" action="">
            <div class="row g-3">
                <h4 class="fw mb-3 text-uppercase">Practicas programadas del area </h4>

                 <div class="col-sm-4">
                    <label for="idarea" class="form-label">Periodo de tiempo</label>
                    <select class="form-select"  required>
                        <option value="DIA" selected="true">DÃ­a</option>
                        <option value="SEMANA">Semana</option>
                        <option value="MES">Mes</option>
                    </select>
                    <div class="invalid-feedback">
                        Please select a valid area.
                    </div>
                 </div>

                <div class="col-3 d-grid gap-2 d-md-block">
                    <br>
                    <a href="#" class="btn btn-primary ">Buscar</a>
                    <a href="practicas/nueva_practica" class="btn btn-secondary">Agregar practica</a>
                </div>
            </div>     
        </form>

            
        <div>
            <div class="container p-4">
                <div class="container">
                    <div class="row" >
                            <div class="text-center col-sm">Horario</div>
                            <div class="text-center col-sm">Fecha</div>
                            <div class="text-center col-sm">Nombre de la practica</div>
                            <div class="text-center col-sm">Encargado</div>
                            <div class="text-center col-sm">Software</div>
                    </div>
                </div>
                <div class="row" style="width:100; height:550px; overflow: scroll;">
                    {{#each practicas}}
                    <div class="container">
                        <div class="row" >
                                <div class="text-center col-sm">{{horainicio}}</div>
                                <div class="text-center col-sm">{{fecha}}</div>
                                <div class="text-center col-sm">{{practicanombre}}</div>
                                <div class="text-center col-sm">{{nombre}} {{apellidop}} {{apellidom}}</div>
                                <div class="text-center col-sm">{{software}}</div>
                        </div>
                    </div>
                    {{else}}
                    <div class="col-md-4 mx-auto">
                        <div class="card card-body text-center">
                            <p>There are not practicas saved yet.</p>
                            <a href="/practicas/nueva_practica">Create One!</a>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</body>