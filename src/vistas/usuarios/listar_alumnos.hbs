<body class="bg-dark d-flex justify-content-center align-items-center vh-100">
    <div class="bg-white p-5 rounded-5 container">
        <form method="POST" action="">
            <h4 class="fw mb-3 text-uppercase">Listado de estudiantes</h4>
                <div class="row g-3">
                    <div class="col-sm-4">
                        <label for="idarea" class="form-label">Carrera a la que pertenece</label>
                        <select class="form-select" name="idcarrera" required>
                        {{#each carreras}}
                                <option value="{{NOMBRE}}">{{NOMBRE}}</option>
                        {{/each}} 
                        </select>
                        <div class="invalid-feedback">
                        Please select a valid area.
                        </div>
                    </div>
                    <div class="col-sm-5">
                        <label for="campo" class="form-label">Buscar alumno</label>
                        <input type="text" class="form-control" name="campo" placeholder="" value="">
                    </div>
        <div class="col-sm-2">
            <br>
            <a class="btn btn-primary" href="/inventarios/alumnos">Buscar</a>
            <a class="btn btn-primary" href="/inventarios/usuarios/agregar_alumno">Nuevo</a>
        </div>
    </div>
</form>
<br>
        <table class="table table-primary">
            <thead class="table-dark">
                <tr>
                    <th scope="col" class="text-center">Num. Control</th>
                    <th scope="col" class="text-center">Nombre(s)</th>
                    <th scope="col" class="text-center">Apellido Paterno</th>
                    <th scope="col" class="text-center">Apellido Materno</th>
                    <th scope="col" class="text-center">Carrera</th>
                    <th scope="col" class="text-center">Semestre</th>
                    <th scope="col" class="text-center">Status</th>
                    <th scope="col" class="text-center">Editar</th>
                    <th scope="col" class="text-center">Eliminar</th>
                </tr>
            </thead>
            <tbody>
                {{#each alumnos}}
                    <tr>
                        <td class="text-center" scope="row">{{NOCONTROL}}</td>
                        <td class="text-center" >{{NOMBRE}}</td>
                        <td class="text-center" >{{APELLIDOP}}</td>
                        <td class="text-center">{{APELLIDOM}}</td>
                        <td class="text-center">{{CARRERA}}</td>
                        <td class="text-center">{{SEMESTRE}}</td>
                        <td class="text-center">{{STATUS}}</td>
                        <td class="text-center"><a class="btn btn-secondary" href="/inventarios/alumnos/editar/{{NOCONTROL}}"><i class="bi bi-pencil"></i></a></td>
                        <td class="text-center"><a class="btn btn-danger" href="/inventarios/alumnos/eliminar/{{NOCONTROL}}"><i class="bi bi-trash3"></i></a></td>
                    </tr>

                    {{else}}
                    <div class="alert alert-warning text-center" role="alert">
                         No se encontraron registros
                    </div>
                {{/each}} 
            </tbody>
        </table> 
    </div>
</body>